# -*- coding: utf-8 -*-

server {
    listen         80;
    server_name    _;
    server_tokens  off;

    location / {
        return  301 https://$host$request_uri;
    }
}

server {
    listen         80;
    server_name    www.stockholmsaltspa.com;

    location / {
        return 301 https://stockholmsaltspa.se/;
    }

    access_log /var/log/nginx/www.stockholmsaltspa.com-access.log;
    error_log /var/log/nginx/www.stockholmsaltspa.com-error.log;
}

server {
    listen         80;
    server_name    stockholmsaltspa.com;

    location / {
        return 301 https://stockholmsaltspa.se/;
    }

    access_log /var/log/nginx/stockholmsaltspa.com-access.log;
    error_log /var/log/nginx/stockholmsaltspa.com-error.log;
}

{% for vhost in vhosts -%}

server {
    listen         443;
    server_name    {{ vhost.name }};
    server_tokens  off;
    charset        utf-8;
    gzip           on;

    {% if vhost.max_upload_size is defined -%}
    client_max_body_size {{ vhost.max_upload_size }};
    {% endif %}

    ssl                  on;
    ssl_certificate      /etc/letsencrypt/live/{{ vhost.name }}/fullchain.pem;
    ssl_certificate_key  /etc/letsencrypt/live/{{ vhost.name }}/privkey.pem;

    proxy_set_header  Host $host;
    proxy_set_header  X-Real-IP $remote_addr;
    proxy_set_header  X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header  X-Forwarded-Proto $scheme;

    {% if vhost.basic_auth is defined and vhost.basic_auth -%}
    auth_basic            {{ vhost.name }};
    auth_basic_user_file  /etc/nginx/htpasswd;
    {% endif %}

    location / {
        {% if vhost.local_port is defined -%}
        proxy_pass  http://127.0.0.1:{{ vhost.local_port }};
        {% endif -%}

        {% if vhost.proxy_buffering is defined -%}
        proxy_buffering {{ 'off' if not vhost.proxy_buffering else 'on' }};
        {% endif -%}

        root /usr/share/nginx/html/{{ vhost.name }};
        autoindex on;
    }

    access_log  /var/log/nginx/{{ vhost.name }}-access.log;
    error_log   /var/log/nginx/{{ vhost.name }}-error.log;
}

{% endfor %}
